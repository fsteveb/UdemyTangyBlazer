@page "/learnBlazer/demoproduct"

<h2 class="text-primary">Demo Product</h2>
<div class="card-group">
    @foreach (var prod in Products)
    {
        <div class="border p-2 mt-2" style="background-color: azure;">
        <div class="card bg-light mb-3" style="width: 28rem;">
            <div class="card-body">
                <h5 class="card-title">Product - @prod.Id</h5>
                <div class="card-text">
                    <p>Name - @prod.Name</p>
                    <p>Show Properties: <input type="checkbox" @bind="prod.IsActive" /></p>

                        @if (prod.IsActive)
                    {
                        @foreach (var prop in prod.ProductProperties)
                        {
                            <p>@prop.Key - @prop.Value</p>
                        }
                    }
                    <button class="btn-danger" style="width: 100px;">Delete</button>
                    <button class="btn-success" style="width: 100px;">Edit</button>
                </div>
            </div>
        </div>
    </div>
    }
</div>

